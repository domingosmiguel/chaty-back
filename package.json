{
  "name": "chaty-back",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "author": "Miguel Domingos",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && tsc -p tsconfig.build.json --skipLibCheck",
    "start": "node dist/server.js",
    "start_test": "NODE_ENV=development npm run dev:migrate:deploy && npm run dev_test",
    "migrate:deploy": "prisma migrate deploy",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:coverage": "NODE_ENV=test jest --passWithNoTests --runInBand --coverage --collectCoverageFrom='./src/**'",
    "test:migrate:dev": "npm run test:load-envs prisma migrate dev",
    "test:migrate:deploy": "npm run test:load-envs prisma migrate deploy",
    "test:watch": "jest --watch --passWithNoTests --runInBand",
    "test:load-envs": "dotenv -e .env.test",
    "test:seed": "npm run test:load-envs prisma db seed",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:migrate:dev": "npm run dev:load-envs prisma migrate dev",
    "dev:migrate:deploy": "npm run dev:load-envs prisma migrate deploy",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev": "NODE_ENV=development nodemon -L --watch 'src/' --exec 'ts-node -r tsconfig-paths/register ./src/server.ts' -e ts",
    "dev_test": "NODE_ENV=development tsx watch ./src/server.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-boundaries": "^3.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.6"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.6.2",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "prisma": "^4.11.0",
    "redis": "^4.6.5",
    "typescript": "^5.0.2"
  }
}
